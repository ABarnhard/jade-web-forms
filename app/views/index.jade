doctype html
html
  head
    meta(charset='utf-8')
    title Jade/Web Forms
    link(rel='stylesheet',href='/css/style.css')
  body
    // anything after = is JavaScript and prints to the screen
    h1= Math.pow(8, 2)
    // anything after a - is JavaScript but doesn't print to the screen
    - var x = 3, y = 2
    h2= x + y

    // kick ass jade loop
    - var colors = ['blue', 'green', 'yellow', 'pink']
    each color in colors
      if color === 'green'
        h1 I love green
      else
        h2 blah...no green!!!
      .color(style='color:#{color};')= color

    // this is a public comment
    //- this is a private comment
    h1.a.b.c#d.e hello, jade
